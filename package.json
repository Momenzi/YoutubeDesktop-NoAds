{
  "name": "youtubenoads",
  "version": "0.1.0",
  "main": "main.js",
  "description": "YouTube Desktop app without ads and extra features.",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "dependencies": {
    "ffmpeg": "^0.0.4",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "yt-dlp-exec": "^1.0.2"
  },
  "devDependencies": {
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8"
  },
  "forceCodeSigning": false,
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --win"
  },
  "build": {
    "appId": "com.youtubenoads.app",
    "productName": "YouTubeNoAds",
    "copyright": "Copyright Momenzi Â© 2025",
    "directories": {
      "output": "dist"
    },
